                            <DataGridCheckBoxColumn Header="Pass Practical 4" Binding="{Binding PassPractical4}" Visibility="Hidden"></DataGridCheckBoxColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
